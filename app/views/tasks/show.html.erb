<div class="container">
      <div>
      <p class="my-5">
        <strong class="">Task Description:</strong>
        <%= @task.task %>
      </p>

      <p class="my-5">
        <strong class="">Date:</strong>
        <% if @task.date %>
          <%= @task.date.strftime("%m/%d/%Y") %>
        <% end %>
      </p>

      <p class="my-5">
      <strong class="">Time:</strong>
      <% if @task.time %>
        <%= @task.time.strftime("%I:%M%p") %>
      <% end %>
    </p>

      <p class="my-5">
      <strong class="">Category id:</strong>
      <%= @task.category_id %>
    </p>

    <%= link_to 'Edit this task', edit_task_path(@task), class: "btn btn-primary" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this task', task_path(@task), method: :delete, class: "btn btn-secondary" %>
    </div>
    <%= link_to 'Back to tasks', tasks_path, class: "btn btn-link" %>
  </div>
</div>