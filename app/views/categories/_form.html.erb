<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation" class="">
      <ul class='ps-0'>
        <% category.errors.each do |error| %>
          <li class='list-unstyled text-primary'><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :category_name, class:'form-label' %>
    </br>
    <%= form.text_field :category_name, class: "rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="mb-3">
    <%= form.number_field :user_id, value: current_user.id, type: :hidden, class: "rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  </br>
  <%= form.submit class: "btn btn-primary" %>

<% end %>
