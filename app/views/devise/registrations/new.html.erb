<h5>Sign up</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo:false }) do |f| %>

  <div class="field mb-3">
    <%= f.label :email, class: 'form-label mb-0' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-100 rounded border border-secondary px-3 py-2 mt-2' %>
  </div>

  <div class="field mb-3">
    <%= f.label :password, class: 'form-label mb-0' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'w-100 rounded border border-secondary px-3 py-2 mt-2' %>
  </div>

  <div class="field mb-3">
    <%= f.label :password_confirmation, class: 'form-label mb-0' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-100 rounded border border-secondary px-3 py-2 mt-2' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary w-100 mb-3' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<% if resource.errors.present? %>
  <ul class='position-absolute py-2 px-3 bottom-0 end-0 m-3 btn btn-secondary' id="alert ">
    <% resource.errors.full_messages.each do |message| %>
      <li class='list-unstyled'><%= message %></li>
    <% end %>
  </ul>

<% end %>
