

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo:false }) do |f| %>

  <div class="field mb-3">
    <%= f.label :email, class: 'form-label mb-0' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-100 rounded border border-secondary px-3 py-2 mt-2'  %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-primary w-100 mb-3' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<% if resource.errors.present? %>
  <ul class='position-absolute py-2 px-3 bottom-0 end-0 m-3 btn btn-secondary' id="alert ">
    <% resource.errors.full_messages.each do |message| %>
      <li class='list-unstyled'><%= message %></li>
    <% end %>
  </ul>
<% end %>
